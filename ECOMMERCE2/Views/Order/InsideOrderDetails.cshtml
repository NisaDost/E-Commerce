@model ECOMMERCE2.Models.OrderDetailViewModel
@{
    ViewBag.Title = "Order Details";
}
<partial name="_SinglePageHeaderPartial" />

<div id="wrapper" class="wrapper-fluid banners-effect-5">
    <div class="main-container container mt-5">
        <div class="row">
            <div class="content d-flex justify-content-around align-items-center">
                <div class="col-7">
                    <table class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                @*<td class="text-center">Order ID</td>*@
                                <td class="text-center">Product Image</td>
                                <td class="text-center">Product Brand</td>
                                <td class="text-center">Product Name</td>
                                <td class="text-center">Quantity</td>
                                <td class="text-center">Price</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr class="text-center">
                                    @*<td class="text-center">@item.Id</td>*@
                                    <td>
                                        <img src="@item.ProductImage" alt="Product Image" style="max-width: 50px;" />
                                    </td>
                                    <td>@item.ProductBrand</td>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>$@item.TotalPrice.ToString("0.##")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="col-3">
                    <div>
                        <h4>Customer Information</h4>
                        <p>Name: @Model.CustomerName @Model.CustomerSurname</p>
                    </div>
                    <div>
                        <h4>Cargo Information</h4>
                        <p>Shipping Address: @Model.ShippingAddress</p>
                        <h4>Total: $@Model.Total.ToString("0.##")</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
