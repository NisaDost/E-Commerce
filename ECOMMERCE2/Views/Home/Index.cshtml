@model List<ECOMMERCE2.Data.Model.Product>;
@{
    ViewData["Title"] = "Home Page";
    var categories = ViewBag.Categories as List<ECOMMERCE2.Data.Model.Category>;
}

<!-- Hero Start -->
<div class="container-fluid py-5 mb-5 hero-header">
    <div class="container py-5">
        <div class="row g-5 align-items-center">
            <div class="col-md-12 col-lg-7">
                <h4 class="mb-3 text-secondary">Original Brands</h4>
                <h1 class="mb-5 display-3 text-primary">Sports Shoes & Sneakers</h1>
                @* <div class="position-relative mx-auto">
                    <input class="form-control border-2 border-secondary w-75 py-3 px-4 rounded-pill" type="number" placeholder="Search">
                    <button type="submit" class="btn btn-primary border-2 border-secondary py-3 px-4 position-absolute rounded-pill text-white h-100" style="top: 0; right: 25%;">Search</button>
                </div> *@
            </div>
            <div class="col-md-12 col-lg-5">
                <div id="carouselId" class="carousel slide position-relative" data-bs-ride="carousel">
                    <div class="carousel-inner" role="listbox">
                        <div class="carousel-item active rounded">
                            <img src="~/img/hero-item.jpg" class="img-fluid w-100 h-100 bg-secondary rounded" alt="First slide">
                            <a asp-action="Index" asp-controller="Products" class="btn px-4 py-2 text-white rounded">Sneakers</a>
                        </div>
                        <div class="carousel-item rounded">
                            <img src="~/img/hero-item-2.jpg" class="img-fluid w-100 h-100 rounded" alt="Second slide">
                            <a asp-action="Index" asp-controller="Products" class="btn px-4 py-2 text-white rounded">Basketball</a>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Hero End -->
<!--category pills start-->
<div class="container-fluid fruite">
    <div class="container py-5">
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-4 text-start">
                    <h1>Find Your Sneaker</h1>
                </div>
                <!-- Category pills start-->
                <div class="col-lg-8 text-end">
                    <ul class="nav nav-pills d-inline-flex text-center flex-nowrap">
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill active" data-bs-toggle="pill" data-bs-target="#tab-all" >
                                <span class="text-dark" style="width: 80px;">All</span>
                            </a>
                        </li>
                        @foreach (var item in categories)
                        {
                            <li class="nav-item">
                                <a asp-controller="Products" asp-action="Index" class="d-flex m-2 py-2 bg-light rounded-pill btn">
                                    <span class="text-dark" style="width: 110px;">@item.Name</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
                <!-- Category pills end-->
            </div>
        </div>
    </div>
</div>

<!-- Features Section Start -->
