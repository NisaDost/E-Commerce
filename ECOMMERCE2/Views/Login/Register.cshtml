@model ECOMMERCE2.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    ViewData["AppName"] = "DashUP";
    Layout = null;
    var role = ViewBag.Role as string;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ECOMMERCE2</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" asp-append-version="true">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet" asp-append-version="true">

    <!-- Icon Font Stylesheet -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet" asp-append-version="true">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" asp-append-version="true">


    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet" asp-append-version="true">
</head>

<div>
    <img src="~/img/running.png" class="img-fluid position-absolute" style="width: 60vw;" alt="">
</div>

<form asp-action="Register" class="d-flex flex-column min-vh-100 justify-content-center">
    <div class="container card shadow-lg col-md-3 py-4 px-4">
        <a class="navbar-brand"><h1 class="text-primary display-6 text-center">@ViewData["AppName"]</h1></a>

        <div class="form-group mb-4">
            <label class="text-secondary" for="name">First Name</label>
            <input asp-for="Name" type="text" class="form-control" id="name" required placeholder="First Name">
        </div>

        <div class="form-group mb-4">
            <label class="text-secondary" for="surname">Last Name</label>
            <input asp-for="Surname" type="text" class="form-control" id="lastname" required placeholder="Last Name">
        </div>

        <div class="form-group mb-4">
            <label class="text-secondary" for="userName">Username</label>
            <input asp-for="Username" type="text" class="form-control" id="userName" required placeholder="Username">
        </div>
        <div class="form-group mb-3">
            <label class="text-secondary" for="exampleInputPassword1">Password</label>
            <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" required placeholder="*********">
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger mt-3" role="alert">
                @ViewBag.Error
            </div>
        }
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>