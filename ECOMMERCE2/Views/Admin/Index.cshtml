@model List<ECOMMERCE2.Data.Model.Category>
@{
    ViewData["Title"] = "Admin Page";
    var products = ViewBag.Products as List<ECOMMERCE2.Data.Model.Product>;
    var uniqueBrands = products.Select(p => p.Brand).Distinct().ToList();
}
<partial name="_SinglePageHeaderPartial" />

<div class="container-fluid px-4">
    <div class="row my-4">
        <div class="col-9">
            <h1>Categories</h1>
        </div>
        <div class="col-3 my-auto">
            <a class="btn btn-success float-end" asp-controller="" asp-action="">
                <i class="fas fa-plus"></i> Create
            </a>
        </div>
    </div>
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Template Name</th>
                    <th scope="col" class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>TemplateName</td>
                    <td>
                        <a class="btn btn-danger float-end" asp-controller="" asp-action="" asp-route-id="">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                        <a class="btn btn-primary float-end mx-2" asp-controller="" asp-action="" asp-route-id="">
                            <i class="fas fa-pen"></i> Edit
                        </a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>